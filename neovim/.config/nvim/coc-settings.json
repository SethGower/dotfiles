{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp",
                "h",
                "hpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "compilationDatabaseDirectory": "build",
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        },
        "hdlChecker": {
            "command": "/home/seth/.local/bin/hdl_checker",
            "args": [
                "--lsp"
            ],
            "filetypes": [
                "vhdl"
            ]
        }
    }
}
