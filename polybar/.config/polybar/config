[colors]
background = ${xrdb:color0:#222}
;background = #0000000 ;makes background transparent
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color3:#222}
alert = ${xrdb:color3:#222}

[bar/base]
monitor = ${env:POLYBAR_PRIMARY} 
height = 30

radius = 10
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 4
border-color = #0000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Roboto-11;0
font-1 = FontAwesome:style=Solid:pixelsize=11;1
;separator = " | "
cursor-click = pointer

width = 80%
override-redirect = true
wm-restack = i3
bottom = false
offset-x = 10%

[bar/top]
inherit = bar/base
enable-ipc = true


tray-position = right
tray-padding = 2

modules-left = ${env:POLYBAR_PRIMARY_TOP_LEFT} 
modules-center = ${env:POLYBAR_PRIMARY_TOP_CENTER}
modules-right = ${env:POLYBAR_PRIMARY_TOP_RIGHT}

[bar/top-secondary]
inherit = bar/base

monitor = ${env:POLYBAR_SECONDARY}

modules-left = ${env:POLYBAR_PRIMARY_TOP_LEFT} 
modules-center = ${env:POLYBAR_PRIMARY_TOP_CENTER}
modules-right = ${env:POLYBAR_PRIMARY_TOP_RIGHT}

[bar/top-tertiary]
inherit = bar/base

monitor = ${env:POLYBAR_TERTIARY}

modules-left = ${env:POLYBAR_PRIMARY_TOP_LEFT} 
modules-center = ${env:POLYBAR_PRIMARY_TOP_CENTER}
modules-right = ${env:POLYBAR_PRIMARY_TOP_RIGHT}

[module/xwindow]
type = internal/xwindow
label = %title:0:80% 



[module/i3]
type = internal/i3
format = <label-state> <label-mode>
strip-wsnumbers = true
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.secondary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.secondary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2
label-unfocused-background = ${colors.background}

; visible = Active workspace on unfocused monitor
label-visible = %index%  %icon%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/xbacklight]
type = internal/xbacklight

format = <label>
label = %{F#f00}BL:%{F-} %percentage%%

[module/volume]
type = internal/alsa

format-volume = <label-volume>
format-prefix = VOL:
format-prefix-foreground = ${colors.primary}

label-volume =%{F#f00}VOL:%{F-} %percentage%%

format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

time-format = %H:%M

format-charging = <label-charging>
format-discharging =   <label-discharging>

label-charging = BAT0: %{F#ff0}%percentage%%%{F-}
label-discharging = BAT0: %{F#f00}%percentage%%%{F-}
label-full = BAT0:  %{F#0f0}%percentage%%%{F-}

; ramp-capacity-0 =  
; ramp-capacity-1 = 
; ramp-capacity-2 = 
; ramp-capacity-3 = 
; ramp-capacity-4 = 

; animation-charging-0 = 
; animation-charging-1 = 
; animation-charging-2 = 
; animation-charging-3 = 
; animation-charging-4 = 
; animation-framerate = 100

[module/battery1]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 98

time-format = %H:%M

format-charging = <label-charging>
format-discharging =   <label-discharging>

label-charging = BAT1: %{F#ff0}%percentage%%%{F-}
label-discharging = BAT1: %{F#f00}%percentage%%%{F-}
label-full = BAT1:  %{F#0f0}%percentage%%%{F-}
[module/date]
type = internal/date
time = %H:%M
label = %time%

[settings]
screenchange-reload = true

